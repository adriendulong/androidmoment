<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvitationsFragment" 
    android:background="@color/gris_chat">

    <ListView android:id="@+id/list_view_contacts"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@drawable/separation_point"></ListView>
    <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="30dp"
              android:layout_centerInParent="true"
              android:gravity="center"
              android:text="@string/no_favorites"
              android:textSize="16dp"
              android:visibility="gone"
              android:id="@+id/no_favorites"/>

</RelativeLayout>