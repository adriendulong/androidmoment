                       android:layout_marginBottom="5dp"/>-->
            <RelativeLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bloc_date"/>
                <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <ImageView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/picto_time"
                        android:layout_centerHorizontal="true"/>
                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="4dp">
                        <com.moment.customfont.MomentTextView android:id="@+id/infos_moment_date_debut"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Mercredi 22 Juillet"
	                        android:textSize="10sp"
	                        android:textColor="@color/gris_texte"
	                        android:textAllCaps="true"/>
                        <com.moment.customfont.MomentTextView android:id="@+id/infos_moment_heure_debut"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="20H00"
	                        android:textSize="10sp"
	                        android:textColor="@color/gris_texte"
	                        android:textAllCaps="true"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="4dp"
                        android:gravity="right">
                        <com.moment.customfont.MomentTextView android:id="@+id/infos_moment_date_fin"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="Mercredi 22 Juillet"
	                        android:textSize="10sp"
	                        android:textColor="@color/gris_texte"
	                        android:textAllCaps="true"/>
                        <com.moment.customfont.MomentTextView android:id="@+id/infos_moment_heure_fin"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:text="23H00"
	                        android:textSize="10sp"
	                        android:textColor="@color/gris_texte"
	                        android:textAllCaps="true"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/mapHost"
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:onClick="detailMap">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bloc_lieu" />
                <!--
				 <fragment xmlns:android="http://schemas.android.com/apk/res/android"
				     xmlns:map="http://schemas.android.com/apk/res-auto"
				     android:id="@+id/map"
				     android:layout_margin="5px"
			          android:layout_width="match_parent"
			          android:layout_height="60dp"
			          class="com.google.android.gms.maps.SupportMapFragment"
			          map:uiCompass="false"
					  map:uiRotateGestures="false"
					  map:uiScrollGestures="false"
					  map:uiTiltGestures="false"
					  map:uiZoomControls="false"
					  map:uiZoomGestures="false"/>
					  -->
                <WebView android:layout_width="match_parent"
                         android:layout_height="60dp"
                         android:id="@+id/map_web"
                         android:layout_margin="5px"/>
                <ImageButton android:layout_width="fill_parent"
                             android:layout_height="fill_parent"
                             android:background="@android:color/transparent"
                             android:onClick="detailMap"/>
                <com.moment.customfont.MomentTextView android:id="@+id/infos_moment_adresse"
                                                      android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content"
                                                      android:textColor="@color/gris_texte"
                                                      android:textSize="10sp"
                                                      android:textAllCaps="true"
                                                      android:text="50 cours de la renine, 75006 Paris"
                                                      android:layout_alignParentBottom="true"
                                                      android:paddingBottom="17dp"
                                                      android:paddingLeft="32dp"/>
            </RelativeLayout>
            <com.moment.customfont.MomentButton android:layout_width="fill_parent"
                                                android:layout_height="40dp"
                                                android:background="@color/orange"
                                                android:layout_margin="10dp"
                                                android:text="@string/add_photos_infos"
                                                android:textSize="18dp"
                                                android:textColor="@android:color/white"
                                                android:onClick="addPhotosFromInfos"
                                                android:id="@+id/add_photos_infos"
                                                android:visibility="gone"/>
            <RelativeLayout android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/bloc_photos"
                            android:layout_marginBottom="5dp"
                            android:onClick="goPhotos">
                <ImageView android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/bloc_phba"
                           android:layout_marginTop="2dp"
                           android:layout_marginLeft="2dp"/>
                <GridView android:id="@+id/grid_preview_photos"
                          android:layout_width="fill_parent"
                          android:layout_height="45dp"
                          android:gravity="center"
                          android:layout_marginTop="15dp"
                          android:columnWidth="45dp"
                          android:numColumns="auto_fit"
                          android:verticalSpacing="10dp"
                          android:horizontalSpacing="10dp"
                          android:stretchMode="columnWidth"
                          android:layout_marginRight="10dp"
                          android:layout_marginLeft="10dp"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/ribbon"/>
                <ImageButton android:layout_width="fill_parent"
                             android:layout_height="70dp"
                             android:background="@android:color/transparent"
                             android:onClick="goPhotos"/>
            </RelativeLayout>
            <!--
            <ImageView android:layout_width="fill_parent"
                       android:layout_height="fill_parent"
                       android:background="@drawable/separation_point"
                       android:layout_marginTop="5dp"
                       android:layout_marginBottom="5dp"/>
            -->
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@android:color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                <ImageView android:layout_width="match_parent"
                           android:layout_height="20dp"
                           android:background="@color/orange"/>
                <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
                          android:layout_height="20dp"
                          android:textColor="@color/white"
                          android:textSize="12dp"
                          android:text="@string/share_moment"
                          android:layout_centerHorizontal="true"
                          android:gravity="center"/>
                <LinearLayout android:layout_width="match_parent"
                               android:layout_height="60dp"
                               android:layout_alignParentBottom="true"
                               android:weightSum="4"
                               android:gravity="center"
                               android:orientation="horizontal">
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:background="@drawable/btn_rgl_fb"
                                   android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:background="@drawable/btn_rgl_fb"
                                   android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:tag="facebook"
                                    android:clickable="true"
                                    android:onClick="share">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:background="@drawable/btn_rgl_fb"
                                   android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:tag="twitter"
                                    android:clickable="true"
                                    android:onClick="share">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:background="@drawable/btn_rgl_tw"
                                   android:layout_centerInParent="true"/>
                    </RelativeLayout>
                 </LinearLayout>
            </RelativeLayout>

            <com.moment.customfont.MomentButton android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/red"
                    android:layout_margin="10dp"
                    android:text="@string/delete_moment"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:onClick="delete"
                    android:id="@+id/del_moment"
                    android:visibility="gone"/>
        </LinearLayout>
        
    </LinearLayout>
</ScrollView>