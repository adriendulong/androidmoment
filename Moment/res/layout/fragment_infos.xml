            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:background="@drawable/btn_see_invite"
                             android:layout_centerVertical="true"
                             android:onClick="listInvit"/>
                <ImageButton android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:background="@drawable/btn_add_invite"
                             android:layout_centerVertical="true"
                             android:layout_alignParentRight="true"
                             android:onClick="addGuests"/>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="70dp"
                              android:background="@android:color/white"
                              android:orientation="horizontal"
                              android:weightSum="2"
                              android:clickable="true"
                              android:layout_marginLeft="50dp"
                              android:layout_marginRight="50dp"
                              android:onClick="listInvit"
                              android:layout_centerInParent="true">
                    <LinearLayout android:layout_width="0dp"
                                  android:orientation="horizontal"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:layout_weight="1">
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:background="@drawable/picto_invite"/>
                        <com.moment.customfont.MomentTextView android:id="@+id/guests_number"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="12"
                                  android:textSize="14sp"
                                  android:textColor="@color/gris_texte"
                                  android:layout_marginLeft="3dp"/>
                        <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="@string/infos_moment_invites"
                                  android:textSize="10sp"
                                  android:textColor="@color/gris_texte"
                                  android:layout_marginLeft="5dp"
                                  android:textAllCaps="true"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:orientation="horizontal"
                                  android:layout_height="fill_parent"
                                  android:gravity="center"
                                  android:layout_weight="1">
                        <com.moment.customfont.MomentTextView android:id="@+id/guests_not_coming"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="3"
                                  android:textSize="14sp"
                                  android:textColor="@color/gris_texte"
                                  android:layout_marginRight="5dp"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/picto_no"/>
                        <com.moment.customfont.MomentTextView android:id="@+id/guests_coming"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="9"
                                  android:textSize="14sp"
                                  android:textColor="@color/gris_texte"
                                  android:layout_marginLeft="15dp"
                                  android:layout_marginRight="5dp"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:src="@drawable/picto_valid"/>
                    </LinearLayout>
                </LinearLayout>
             </RelativeLayout>
