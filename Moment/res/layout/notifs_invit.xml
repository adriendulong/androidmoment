<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/gris_chat"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
    <RelativeLayout android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@drawable/bg_notif"
                    android:layout_margin="5dp">
        <ImageView android:layout_width="33dp"
                   android:layout_height="33dp"
                   android:src="@drawable/profile_image"
                   android:id="@+id/moment_image_notif"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical"
                  android:weightSum="2"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="3dp"
                  android:layout_marginBottom="3dp">
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
            <com.moment.customfont.MomentTextView android:id="@+id/title_moment_notif"
                      android:text="test"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:maxWidth="200dp"
                      android:textColor="@color/gris_texte"/>
            <com.moment.customfont.MomentTextView android:id="@+id/date_moment_notif"
                      android:text="test"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:textColor="@color/gris_texte"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical">
                <ImageView android:layout_width="18dp"
                           android:layout_height="18dp"
                           android:src="@drawable/picto_volet_invit"/>
                <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/gris_texte"
                          android:textSize="12dp"
                          android:text="10"
                          android:layout_marginLeft="5dp"
                          android:id="@+id/nb_guests_moment_notif"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:layout_alignParentRight="true">
                <ImageView android:layout_width="18dp"
                           android:layout_height="18dp"
                           android:src="@drawable/picto_time"/>
                <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/gris_texte"
                          android:textSize="12dp"
                          android:text="20:30"
                          android:layout_marginLeft="5dp"
                          android:id="@+id/time_moment_notif"/>
            </LinearLayout>
        </RelativeLayout>
  </LinearLayout>

</LinearLayout>
