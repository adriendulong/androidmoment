<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_volet" >
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical">

        <RelativeLayout android:id="@+id/my_moments_button"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp">
            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/picto_bulle"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="5dp"/>
            <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:layout_alignParentLeft="true"
                                                  android:layout_centerVertical="true"
                                                  android:layout_marginLeft="60dp"
                                                  android:text="@string/my_moments_volet"
                                                  android:textColor="@color/white"
                                                  android:textSize="14dp"/>
            <ImageView android:layout_width="15dp"
                       android:layout_height="30dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/picto_fleche"/>
        </RelativeLayout>
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="2dp"
                   android:background="@drawable/sep_top"
                   android:id="@+id/separator"/>

        <RelativeLayout android:id="@+id/profile_button_volet"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp">
            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/picto_profil"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="5dp"/>
            <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:layout_alignParentLeft="true"
                                                  android:layout_centerVertical="true"
                                                  android:layout_marginLeft="60dp"
                                                  android:text="@string/profil_volet"
                                                  android:textColor="@color/white"
                                                  android:textSize="14dp"/>
            <ImageView android:layout_width="15dp"
                       android:layout_height="30dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/picto_fleche"/>
        </RelativeLayout>
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="2dp"
                   android:background="@drawable/sep_top"
                   android:id="@+id/separator2"/>
        <RelativeLayout android:id="@+id/settings_button_volet"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp">
            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/picto_param"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="5dp"/>
            <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:layout_alignParentLeft="true"
                                                  android:layout_centerVertical="true"
                                                  android:layout_marginLeft="60dp"
                                                  android:text="@string/settings_volet"
                                                  android:textColor="@color/white"
                                                  android:textSize="14dp"/>
            <ImageView android:layout_width="15dp"
                       android:layout_height="30dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="10dp"
                       android:src="@drawable/picto_fleche"/>
        </RelativeLayout>
        <ImageView android:layout_width="fill_parent"
                   android:layout_height="2dp"
                   android:background="@drawable/sep_top"
                   android:id="@+id/separator3"/>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:id="@+id/volet_search">

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/picto_loupe"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/imageView2"/>

            <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:layout_alignParentLeft="true"
                                                  android:layout_centerVertical="true"
                                                  android:layout_marginLeft="60dp"
                                                  android:text="Rechercher"
                                                  android:textColor="@color/white"
                                                  android:textSize="14dp"/>

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/picto_fleche"
                    android:id="@+id/imageView3"/>
        </RelativeLayout>

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@drawable/sep_top"
                android:id="@+id/imageView"/>

    </LinearLayout>

</RelativeLayout>