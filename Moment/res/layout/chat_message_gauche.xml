<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    			android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal"
		                android:weightSum="10"
		                android:paddingLeft="10dp"
		                android:paddingRight="10dp"
		                android:paddingTop="0dp"
		                android:layout_marginTop="5dp">
	                <RelativeLayout android:layout_width="0dp"
	                    android:layout_height="fill_parent"
	                    android:layout_weight="2">
                        <ImageView android:layout_width="53dp"
                                   android:layout_height="53dp"
                                   android:background="@drawable/back_photo"
                                   android:layout_centerHorizontal="true"/>
                        <ImageView android:id="@+id/photo_user"
                                   android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:src="@drawable/profile_image"
                                   android:layout_centerHorizontal="true"
                                   android:layout_margin="1dp"
                                   android:layout_marginTop="4dp"
                                   android:layout_alignParentTop="true"/>
	                </RelativeLayout>
	                 <RelativeLayout android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:minHeight="40dp"
	                    android:layout_weight="8"
	                    android:background="@drawable/box_left">
	                    <com.moment.customfont.MomentTextView android:id="@+id/chat_message_text"
	                        android:layout_width="fill_parent"
	                        android:layout_height="wrap_content"
	                        android:textSize="10sp"
	                        android:textColor="@color/gris_texte"
	                        android:textAllCaps="false"
	                        android:text="" 
	                        android:layout_centerInParent="true"
	                        android:paddingLeft="5dp"
	                        android:lineSpacingExtra="0dp"/>
	                </RelativeLayout>
                </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="10"
                android:gravity="right">
	                <RelativeLayout android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="8"
	                    android:paddingLeft="10dp"
	                    android:paddingRight="5dp">
	                   <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
	                       android:layout_height="wrap_content"
	                       android:textColor="@color/gris_texte"
	                       android:textSize="10sp"
                           android:id="@+id/autheur"
                           android:longClickable="false"/>
                        <com.moment.customfont.MomentTextView android:layout_width="wrap_content"
	                       android:layout_height="wrap_content"
	                       android:textColor="@color/gris_texte"
	                       android:textSize="10sp"
                           android:layout_alignParentRight="true"
                           android:id="@+id/heure"/>
                        <com.moment.customfont.MomentTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gris_texte"
                            android:textSize="10sp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/heure"
                            android:id="@+id/date"/>
	                </RelativeLayout>
                
            </LinearLayout>
</LinearLayout>
