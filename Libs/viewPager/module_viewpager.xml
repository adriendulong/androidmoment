<?xml version="1.0" encoding="UTF-8"?>
<project name="module_viewpager" default="compile.module.viewpager">
  <dirname property="module.viewpager.basedir" file="${ant.file.module_viewpager}"/>
  
  <property name="module.jdk.home.viewpager" value="${jdk.home.android_4.2.2_platform}"/>
  <property name="module.jdk.bin.viewpager" value="${jdk.bin.android_4.2.2_platform}"/>
  <property name="module.jdk.classpath.viewpager" value="jdk.classpath.android_4.2.2_platform"/>
  
  <property name="compiler.args.viewpager" value="${compiler.args}"/>
  
  <property name="viewpager.output.dir" value="${module.viewpager.basedir}/../../out/production/viewPager"/>
  <property name="viewpager.testoutput.dir" value="${module.viewpager.basedir}/../../out/test/viewPager"/>
  
  <path id="viewpager.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="viewpager.module.production.classpath">
    <path refid="${module.jdk.classpath.viewpager}"/>
    <pathelement location="${basedir}/Moment/libs/android-support-v4.jar"/>
  </path>
  
  <path id="viewpager.runtime.production.module.classpath">
    <pathelement location="${viewpager.output.dir}"/>
    <pathelement location="${basedir}/Moment/libs/android-support-v4.jar"/>
  </path>
  
  <path id="viewpager.module.classpath">
    <path refid="${module.jdk.classpath.viewpager}"/>
    <pathelement location="${viewpager.output.dir}"/>
    <pathelement location="${basedir}/Moment/libs/android-support-v4.jar"/>
  </path>
  
  <path id="viewpager.runtime.module.classpath">
    <pathelement location="${viewpager.testoutput.dir}"/>
    <pathelement location="${viewpager.output.dir}"/>
    <pathelement location="${basedir}/Moment/libs/android-support-v4.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.viewpager">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.viewpager">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.viewpager"/>
  </patternset>
  
  <path id="viewpager.module.sourcepath">
    <dirset dir="${module.viewpager.basedir}">
      <include name="gen"/>
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.viewpager" depends="compile.module.viewpager.production,compile.module.viewpager.tests" description="Compile module viewPager"/>
  
  <target name="compile.module.viewpager.production" description="Compile module viewPager; production classes">
    <mkdir dir="${viewpager.output.dir}"/>
    <javac destdir="${viewpager.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.viewpager}/javac">
      <compilerarg line="${compiler.args.viewpager}"/>
      <bootclasspath refid="viewpager.module.bootclasspath"/>
      <classpath refid="viewpager.module.production.classpath"/>
      <src refid="viewpager.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.viewpager"/>
    </javac>
    
    <copy todir="${viewpager.output.dir}">
      <fileset dir="${module.viewpager.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.viewpager"/>
      </fileset>
      <fileset dir="${module.viewpager.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.viewpager"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.viewpager.tests" depends="compile.module.viewpager.production" description="compile module viewPager; test classes" unless="skip.tests"/>
  
  <target name="clean.module.viewpager" description="cleanup module">
    <delete dir="${viewpager.output.dir}"/>
    <delete dir="${viewpager.testoutput.dir}"/>
  </target>
</project>